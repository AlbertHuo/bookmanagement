<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/imaginView"
        android:layout_width="match_parent"
        android:layout_marginTop="35dp"
        android:layout_height="135dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentStart="true"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/login_zhanghao" />
        </LinearLayout>
    </android.support.v7.widget.LinearLayoutCompat>

    <RelativeLayout
        android:layout_height="@dimen/title_bar_height"
        android:layout_width="fill_parent"
        android:background="@color/white"
        android:layout_alignParentTop="true"
        android:id="@id/layout_title">
        <TextView
            android:id="@+id/tab3_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="个人信息"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="38dp"
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:id="@id/layout_title">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center">
            <TextView
                android:id="@+id/tab3_title1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:text="昵称"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="normal" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:background="@drawable/listbar_jinru" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="38dp"
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="6dp"
        android:id="@id/layout_title">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center">
            <TextView
                android:id="@+id/tab3_title2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:text="修改密码"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="normal" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:background="@drawable/listbar_jinru" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="38dp"
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="6dp"
        android:id="@id/layout_title">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center">
            <TextView
                android:id="@+id/tab3_title3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:text="我的电话"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="normal" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:background="@drawable/listbar_jinru" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="38dp"
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="6dp"
        android:id="@id/layout_title">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center">
            <TextView
                android:id="@+id/tab3_title4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:text="关于"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="normal" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:background="@drawable/listbar_jinru" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="38dp"
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="60dp"
        android:id="@id/layout_title">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bg_logout"
                android:text="退出登录"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="normal"/>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>